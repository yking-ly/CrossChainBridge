# Environment Variables for Cross-Chain Bridge
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!

# ============================================
# RPC ENDPOINTS (Get from Alchemy - FREE)
# ============================================
# Sign up at https://alchemy.com
# Create apps for Ethereum Sepolia and Polygon Amoy
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY_HERE
AMOY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/YOUR_ALCHEMY_KEY_HERE

# ============================================
# PRIVATE KEYS (TESTNET ONLY!)
# ============================================
# Create a NEW wallet for testing - DO NOT use your main wallet!
# Export private key from MetaMask (Account Details > Export Private Key)
# Remove the '0x' prefix if present
DEPLOYER_PRIVATE_KEY=your_deployer_private_key_here_without_0x
RELAYER_PRIVATE_KEY=your_relayer_private_key_here_without_0x

# ============================================
# BLOCK EXPLORER API KEYS (FREE)
# ============================================
# Etherscan: https://etherscan.io/myapikey
# Polygonscan: https://polygonscan.com/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# ============================================
# CONTRACT ADDRESSES (Filled after deployment)
# ============================================
# Leave empty initially, fill after deploying contracts
SEPOLIA_BRIDGE_VAULT=
AMOY_BRIDGE_TOKEN=
SEPOLIA_BRIDGE_VALIDATOR=
AMOY_BRIDGE_VALIDATOR=

# ============================================
# RELAYER CONFIGURATION
# ============================================
RELAYER_PORT=3001
DATABASE_URL=./relayer.db
LOG_LEVEL=info

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# WalletConnect Project ID (FREE)
# Get from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ============================================
# OPTIONAL: GAS REPORTING
# ============================================
# For gas cost estimation in USD
# Get from https://coinmarketcap.com/api/
COINMARKETCAP_API_KEY=

# ============================================
# OPTIONAL: HARDHAT FORKING
# ============================================
# Enable forking for testing
FORK_ENABLED=false
FORK_BLOCK_NUMBER=

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
NODE_ENV=development
REPORT_GAS=false
