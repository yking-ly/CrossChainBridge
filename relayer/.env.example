# Relayer Environment Variables
# Copy this to .env in the relayer directory

# Network RPC URLs
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
AMOY_RPC_URL=https://polygon-AMOY.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Relayer Private Key (NEVER commit this!)
RELAYER_PRIVATE_KEY=your_relayer_private_key_here

# Contract Addresses (from deployment)
SEPOLIA_BRIDGE_VAULT=
SEPOLIA_BRIDGE_VALIDATOR=
AMOY_BRIDGE_TOKEN=
AMOY_BRIDGE_VALIDATOR=

# Relayer Configuration
RELAYER_PORT=3001
LOG_LEVEL=info

# Database
DATABASE_URL=./relayer.db

# Processing Configuration (optional - defaults are set in config.ts)
# POLLING_INTERVAL=15000
# SEPOLIA_CONFIRMATIONS=3
# AMOY_CONFIRMATIONS=5
# RETRY_ATTEMPTS=3
# RETRY_DELAY=5000

